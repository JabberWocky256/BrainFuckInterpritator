<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/red_background_dryicons">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round"
                android:id="@+id/enterEditText"
                android:layout_weight="2"
                android:layout_margin="15dp"
                android:gravity="top|left"
                android:textSize="26sp"
                android:alpha="0.95"
                android:textColor="#ffd30200"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_compile"
                android:id="@+id/btn_compile"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" android:paddingLeft="40dp" android:paddingRight="40dp"
                android:paddingTop="15dp" android:paddingBottom="15dp" android:singleLine="false"
                android:background="#ffd30200" android:textColor="#ffffffff"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/outTextView"
                android:background="@drawable/round"
                android:layout_below="@+id/btn_compile"
                android:layout_weight="3"
                android:layout_margin="15dp"
                android:textSize="26sp"
                android:alpha="0.95"
                android:textColor="#ffd30200"/>
/>
    </LinearLayout>